<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.KeyboardGPT"
        tools:targetApi="31"
        android:multiArch="true">

        <activity android:name=".ui.external.DialogActivity"
            android:theme="@style/Theme.KeyboardGPT.Translucent"
            android:excludeFromRecents="true"
            android:taskAffinity=""
            android:exported="true">
            <intent-filter>
                <action android:name="tn.amin.keyboard_gpt.OVERLAY" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>

        <service
            android:name=".llm.service.LlmService"
            android:exported="true">
            <intent-filter>
                <action android:name="tn.amin.keyboard_gpt.LLM_SERVICE" />
            </intent-filter>
        </service>

        <meta-data
            android:name="xposedmodule"
            android:value="true" />
        <meta-data
            android:name="xposeddescription"
            android:value="Integrate Generative AI like ChatGPT in keyboard." />
        <meta-data
            android:name="xposedminversion"
            android:value="93" />
        <meta-data
            android:name="xposedscope"
            android:value="@array/xposedscope" />
    </application>

</manifest>